<h1>Burgers!</h1>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ol>

<h2>Burgers Eaten:</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-delete devoured=true}}
    {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
    <button type="submit">Add Burger</button>
  </div>



  
</form>
