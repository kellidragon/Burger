<div class="jumbotron">
  <h1 class="display-4">Burger Bar</h1>
  <p class="lead">Create and devour your favorite burger in seconds! </p>
  <hr class="my-4">

  <a class="btn btn-primary btn-lg letsPlay" href="#" role="button">Let's eat!</a>
</div>



<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          New Burgers
        </div>
        <ol class="list-group list-group-flush">
          <ol class="list-group-item">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
          </ol>
        </ol>
      </div>
    </div>

    <div class="col-6">
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          Devoured Burgers
        </div>
        <ol class="list-group list-group-flush">
          <ol class="list-group-item">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-delete devoured=true}}
            {{/if}}
            {{/each}}
          </ol>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="name">
          <button type="submit">Add Burger</button>
        </div>

      </form>
    </div>
  </div>
</div>